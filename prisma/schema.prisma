generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int @id @default(autoincrement())
  login String
  password String
  fullName  String 
  age Int

  todo Todo[]
}

model Todo {
  id      Int      @id @default(autoincrement())
  userId  Int
  title    String
  description   String   

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

